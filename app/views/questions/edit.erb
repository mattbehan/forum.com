<div class="errors">
  <% if @question.errors %>
    <% @question.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</div>

<form id="question-form" action = "/questions" method = "post">
  <input type="hidden" name="_method" value="put"/>

  <label for="title">Title: </label>
  <input id="title" size="30" name="question[title]" placeholder="What is your " value="<%= @question.title %>"/>

  <label for="body">Body: </label>
  <input id="body" size="30" name="question[body]" value="<%= @question.body %>"/>

  <input type="submit" value="Submit Changes" />

</form>
