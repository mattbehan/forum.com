<h1>Top Questions</h1>
<% @questions.each do |question| %>
  <div class="question-branch-info">
    <%= erb :"questions/_index_scores_info", {layout: false, locals: {question: question} }%>
  </div>

  <div class="question-info">
    <h4><a href="/questions/<%= question.id %>" ><%= question.title %></a></h4>

    <div class="tags">
      <% question.tags.each do |tag| %>
        <div class="tag"><a href="/tags/<%=tag.id%>" ><%= tag.name %> </a> </div>
      <% end %>
     </div>

     <div class = "user-info">
      <p>
        <!-- need to fix so that it does not display the same thing for every question -->
        <%if question.created_at == question.updated_at %>
        Asked <a class = "profile-link" href = "/users/<%=question.user_id %>"> <%= time_ago(question.created_at) %> </a>ago
        by <%= question.user.display_name %>
        <% else %>
        <!-- need to fix to make it last editors name -->
          Updated <%= time_ago(question.updated_at) %> ago
          by <%= question.user.display_name %>
        <% end %>

    <p>---------------------------------------------------------------</p>
  </div>
<% end %>
